<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConversorCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConversorCalculator"
    Shell.FlyoutBehavior="Disabled"
    Title="ConversorCalculator">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Route="ConversorPage"
        ContentTemplate="{DataTemplate local:ConversorPage}"/>
</Shell>